{
	"name": "rklib/rkphplib",
	"type": "library",
	"description": "PHP library with template engine and wrapper classes to filesystem, mysql and other.",
	"authors": [
		{ "name": "Roland Kujundzic", "email": "roland@kujundzic.de" }
	],
	"minimum-stability" : "dev",
	"prefer-stable" : true,
	"require": {
		"php": ">=7.2.0",
		"ext-mbstring": "*",
		"ext-pdo_mysql": "*",
		"ext-pdo_sqlite": "*",
		"ext-mysqli": "*",
		"ext-sqlite3": "*",
		"ext-curl": "*",
		"ext-ftp": "*",
		"ext-gd": "*",
		"ext-imap": "*",
		"ext-json": "*",
		"ext-dom": "*",
		"ext-xml": "*",
		"ext-zip": "*"
	},
	"autoload": {
		"classmap": ["src/"],
		"files": []
	},
	"license": "GPL-3.0-or-later",
	"require-dev": {
		"apigen/apigen": "^4.1",
		"symfony/yaml": "^2.8"
	}
}
