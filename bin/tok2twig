#!/usr/bin/php
<?php

require_once(dirname(__DIR__).'/src/TTwig.class.php');
require_once(dirname(__DIR__).'/src/File.class.php');


$tok = new rkphplib\Tokenizer();
$ttwig = new rkphplib\TTwig();
$tok->register($ttwig);

if (empty($_SERVER['argv'][1])) {
	print "\nSYNTAX: ".$_SERVER['argv'][0]." [tok-text|tok-file]\n\n";
	exit(1);
}
else if (rkphplib\File::exists($_SERVER['argv'][1])) {
	$tok->load($_SERVER['argv'][1]);
	print $tok->toString();
}
else {
	$tok->setText($_SERVER['argv'][1]);
	print $tok->toString();
}
