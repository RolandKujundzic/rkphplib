#!/usr/bin/php
<?php

require_once __DIR__.'/../src/tok/Tokenizer.class.php';
require_once __DIR__.'/../src/tok/TTwig.class.php';
require_once __DIR__.'/../src/File.class.php';
require_once __DIR__.'/../src/CLI.php';


\rkphplib\CLI::$desc = 'Tokenizer to twig converter';
if (!\rkphplib\CLI::syntax([ 'tok-test|tok-file' ])) {
	return;
}

$tok = new rkphplib\tok\Tokenizer();
$ttwig = new rkphplib\tok\TTwig();
$tok->register($ttwig);

if (rkphplib\File::exists($_SERVER['argv'][1])) {
	$tok->load($_SERVER['argv'][1]);
}
else {
	$tok->setText($_SERVER['argv'][1]);
}

print $tok->toString()."\n";

