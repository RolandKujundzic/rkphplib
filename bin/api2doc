#!/usr/bin/php
<?php

define('PATH_RKPHPLIB', __DIR__.'/../src/');

require_once PATH_RKPHPLIB.'SwaggerYaml.class.php';
require_once 'vendor/autoload.php';


define('SYNTAX', "\nSYNTAX: ".$_SERVER['argv'][0]." [path/to/config.json]\n\n\n");

if (empty($_SERVER['argv'][1])) {
	print SYNTAX;
	exit(1);
}
else if ('?' == $_SERVER['argv'][1] || 'help' == $_SERVER['argv'][1]) {
	print SYNTAX;
	exit(0);
}


$app = new \rkphplib\SwaggerYaml(\rkphplib\JSON::decode(\rkphplib\File::load($_SERVER['argv'][1])));
$app->update();

